<% layout('layout/boilerplate.ejs') %>
<style>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap');

  body {
    font-family: 'Montserrat', sans-serif;
  }

  .reset-password-box {
    background-color: #f8f9fa;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.15);
  }

  .reset-password-box legend {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
    color: #0a4fbf;
  }

  .reset-password-box label {
    font-size: 16px;
    font-weight: bold;
    color: #343A40;
  }

  .reset-password-box input[type="password"] {
    font-size: 14px;
    padding: 8px 12px;
    border-radius: 4px;
    border: 1px solid #ced4da;
    background-color: #fff;
    color: #343A40;
    margin-bottom: 10px; /* Add a vertical margin */
  }

  .reset-password-box input[type="password"]::placeholder {
    color: #A9A9A9;
  }

  .reset-password-box input[type="submit"] {
    font-size: 16px;
    padding: 10px 20px;
    border-radius: 4px;
    background-color: #0a4fbf;
    border: none;
    color: #fff;
    cursor: pointer;
  }
</style>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="reset-password-box">
        <form class="form-holder" action="/reset/<%= token %>" method="POST">
          <legend class="mb-4">Reset Password</legend>
          <div class="form-group">
            <label for="password">New Password</label>
            <input type="password" name="password" value="" placeholder="New password" autofocus="autofocus" class="form-control" />
          </div>
          <div class="form-group">
            <label for="confirm">Confirm Password</label>
            <input type="password" name="confirm" value="" placeholder="Confirm password" class="form-control" />
          </div>
          <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Update Password</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
